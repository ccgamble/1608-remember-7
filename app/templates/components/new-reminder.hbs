<h2>New Reminder</h2>

<form class="add--reminder" {{action 'createReminder' on="submit"}}>
  <label class="new-input input-title">
    Title
    {{input value=title}}
  </label>
  <label class="new-input input-date">
    Date
    {{input value=date type="date"}}
  </label>
  <label class="new-input input-notes">
    Notes
    {{textarea value=notes}}
  </label>
  <button class="add-reminder-submit">Submit</button>
</form>

{{outlet}}
